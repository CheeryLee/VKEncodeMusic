<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
			android:id="@+id/about_logo_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="VKEncodeMusic"
			android:textSize="30sp"/>

		<TextView
			android:id="@+id/ver_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="v [unknown]"
			android:padding="12dp"/>

		<TextView
			android:id="@+id/about_description_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="Программа позволяет перекодировать ENCODED-файлы в MP3 для прослушивания их в стороннем плеере.\n\nСначала нужно сохранить композицию в кэш ВК, затем запустить программу."
			android:padding="12dp"/>

		<GridLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/gridLayout"
			android:padding="12dp">

			<TextView
				android:id="@+id/about_4pda_text"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_row="2"
				android:text="4PDA:"/>

			<TextView
				android:id="@+id/about_4pda_post_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/about_4pda"/>

			<TextView
				android:id="@+id/about_dev_text"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_row="0"
				android:text="Разработка:"/>

			<TextView
				android:id="@+id/about_src_text"
				android:layout_width="150dp"
				android:layout_height="wrap_content"
				android:layout_column="0"
				android:layout_row="1"
				android:text="Исходный код:"/>

			<TextView
				android:id="@+id/about_glm_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_row="0"
				android:text="@string/god_loves_me"/>

			<TextView
				android:id="@+id/about_github_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:layout_row="1"
				android:text="@string/about_github"/>

		</GridLayout>

	</LinearLayout>

</ScrollView>

